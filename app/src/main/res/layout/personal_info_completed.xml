<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <!--ActionBar-->
    <RelativeLayout
        android:id="@+id/pc_title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#FFB90F"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/pc_back"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/base_action_bar_back_normal"/>
        <ImageView
            android:id="@+id/pc_seperator"
            android:layout_width="1.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/pc_back"
            android:background="#edad0d"
            />

        <TextView
            android:id="@+id/pc_personal_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/pc_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text='个人信息'
            android:textColor="#ffffffff"
            android:textSize="22.0sp"/>

    </RelativeLayout>




    <TableLayout
        android:id="@+id/pc_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pc_title"
        android:background="@drawable/radius_drawable_bg"
        android:padding="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dp">



        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="#FF9F9D9D"
                android:textSize="20.0sp"
                />
            <TextView
                android:id="@+id/pc_stu_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="姓名"
                android:textColor="#FF9F9D9D"
                android:textSize="20.0sp"
                />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/pc_back"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="学号"
                android:textColor="#FF9F9D9D"
                android:textSize="20.0sp"
                />
            <TextView
                android:id="@+id/pc_stu_id"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="学号"
                android:textColor="#FF9F9D9D"
                android:textSize="20.0sp"
                />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/pc_back"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:layout_width="0dp"
