<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <!--ActionBar-->
    <RelativeLayout
        android:id="@+id/three_title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#FFB90F"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/three_back_login"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/base_action_bar_back_normal"/>
        <ImageView
            android:id="@+id/three_seperator"
            android:layout_width="2.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/three_back_login"
            android:background="#edad0d"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/three_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text='三人办理'
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/three_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            //第一个table
            <TableLayout
                android:id="@+id/three_pInfo_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_drawable_bg"
                android:padding="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="30dp">
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="姓名"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_name"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="姓名"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />

                </TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/three_back_login"
                    android:background="#FFB90F"
                    />

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="学号"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_id"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="学号"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />

                </TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/three_back_login"
                    android:background="#FFB90F"
                    />

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_gender"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="性别"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/three_bed_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three_pInfo_table"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="30dp"
                android:text="剩余床位信息"
                android:textColor="#FFB90F"/>

            //第二个table
            <TableLayout
                android:id="@+id/three_rInfo_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three_bed_info"
                android:background="@drawable/radius_drawable_bg"
                android:padding="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dp">

                <TableRow>
                    <TextView
                        android:id="@+id/three_building1_name"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="building1"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_building1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="building1"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />

                </TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/three_back_login"
                    android:background="#FFB90F"
                    />

                <TableRow>
                    <TextView
                        android:id="@+id/three_building2_name"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="building2"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_building2"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="building2"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />

                </TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/three_back_login"
                    android:background="#FFB90F"
                    />

                <TableRow>
                    <TextView
                        android:id="@+id/three_building3_name"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="building3"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_building3"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="building3"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/three_back_login"
                    android:background="#FFB90F"
                    />

                <TableRow>
                    <TextView
                        android:id="@+id/three_building4_name"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="building4"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_building4"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="building4"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />

                </TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/three_back_login"
                    android:background="#FFB90F"
                    />

                <TableRow>
                    <TextView
                        android:id="@+id/three_building5_name"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="building5"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/three_building5"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="building5"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                </TableRow>
            </TableLayout>
            //第三个table
            <TableLayout
                android:id="@+id/three_select_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three_rInfo_table"
                android:background="@drawable/radius_drawable_bg"
                android:padding="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="30dp">

                <TableRow>
                    <TextView
                        android:id="@+id/three_select"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="请选择楼号"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                </TableRow>
                <Spinner
                    android:id="@+id/three_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/three_rInfo_table"
                    android:textColor="#FF9F9D9D"
                    android:background="@drawable/radius_drawable_bg"
                    />
            </TableLayout>

            <TextView
                android:id="@+id/three_mate_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three_select_table"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="30dp"
                android:text="同住人信息"
                android:textColor="#FFB90F"/>

            //第四个table
            <TableLayout
                android:id="@+id/three_roommate1Info_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three_mate_info"
                android:background="@drawable/radius_drawable_bg"
                android:padding="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dp">

                <TableRow>
                    <TextView
                        android:id="@+id/three_mate1_id_tag"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="学号1"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/three_mate1_id"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:background="#ffffff"
                        android:hint="学号"
                        android:textColorHint="#FF9F9D9D"
                        android:padding="5dip"
                        android:textSize="16sp" />

                </TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/one_back_login"
                    android:background="#FFB90F"
                    />

                <TableRow>
                    <TextView
                        android:id="@+id/three_mate1_veriCode_tag"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="校验码1"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />

                    <EditText
                        android:id="@+id/three_mate1_veriCode"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:background="#ffffff"
                        android:hint="校验码"
                        android:textColorHint="#FF9F9D9D"
                        android:padding="5dip"
                        android:textSize="16sp" />

                </TableRow>
            </TableLayout>

            //第五个table
            <TableLayout
                android:id="@+id/three_roommate2Info_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three_roommate1Info_table"
                android:background="@drawable/radius_drawable_bg"
                android:padding="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="30dp">
                <TableRow>
                    <TextView
                        android:id="@+id/three_mate2_id_tag"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="学号2"
                        android:textColor="#FF9F9D9D"
                        android:textSize="16sp"
                        />

                    <EditText
                        android:id="@+id/three_mate2_id"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:background="#ffffff"
                        android:hint="学号"
                        android:textColorHint="#FF9F9D9D"
                        android:padding="5dip"
                        android:textSize="16sp" />
                </TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="2.0dp"
                    android:layout_toRightOf="@+id/one_back_login"
                    android:background="#FFB90F"
                    />
                <TableRow>
                <TextView
                    android:id="@+id/three_mate2_veriCode_tag"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="校验码2"
                    android:textColor="#FF9F9D9D"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/three_mate2_veriCode"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:background="#ffffff"
                    android:hint="校验码"
                    android:textColorHint="#FF9F9D9D"
                    android:padding="5dip"
                    android:textSize="16sp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/three_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/three_roommate2Info_table"
                android:layout_marginTop="50dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="5dip"
                android:text="确定"
                android:textColor="#FFB90F"
                android:textSize="18sp" />




        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
