<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".dormitory.DormSuccessActivity" >

    <!--ActionBar-->
    <RelativeLayout
        android:id="@+id/success_title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#FFB90F"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text='办理成功'
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/success_title"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/success_smile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/smile"/>
        <TextView
            android:id="@+id/success"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success_smile"
            android:layout_marginTop="30dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="SUCCESS !"
            android:textColor="#969183"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/success_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip"
            android:text="确认"
            android:textColor="#FFB90F"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
