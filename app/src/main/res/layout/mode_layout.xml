<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <!--ActionBar-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#FFB90F"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_login"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/base_action_bar_back_normal"/>
        <ImageView
            android:id="@+id/seperator"
            android:layout_width="2.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/back_login"
            android:background="#edad0d"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/seperator"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text='办理住宿'
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@drawable/radius_drawable_bg"
        android:padding="10dip"
        android:layout_marginTop="30dp">

        <TableRow>
            <TextView
                android:id="@+id/one_mode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="单人办理"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp"
                />
        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/back_login"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:id="@+id/two_mode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="两人办理"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp"
                />
        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/back_login"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:id="@+id/three_mode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="三人办理"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp"
                />
        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/back_login"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:id="@+id/four_mode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="四人办理"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp"
                />
        </TableRow>

    </TableLayout>



</RelativeLayout>
